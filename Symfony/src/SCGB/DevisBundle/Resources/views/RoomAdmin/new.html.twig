{% extends '::base.html.twig' %}

{% block title %}Mon devis en ligne{% endblock %}
{% set language = 'fr' %}

{% block body %}
{% set new = 1 %}
{% set save = 1 %}
{% include 'SCGBDevisBundle:NavigationAdmin:list.html.twig' %}
<div id="bottom" class="row-fluid ">
		<div class="space_box white_box">
			<h1 class="text_blue title text-left " > Ma Pièce & Ses Travaux</h1>
			 
			<div class="entity-form spacer">
				<form method="post" {{ form_enctype(form) }}>
					<div class="form-horizontal form-padding">
						<legend>Votre {{ entity.name }} <a href="{{ path('devis_list', {'id':id}) }}" class="btn pull-right" id="return_room">Retourner au récapitulatif des pièces</a></legend>	
						<span class="row-fluid">
							<span class="span3">
								<ul class="unstyled">
									<li>
										<span><i class="fa fa-arrows-alt"></i> Taile de la pièce : {{ entity.size}} m²</span>
									</li>
								</ul>
								<ul class="unstyled">
									<li>
										<span><i class="fa fa-arrows-v"></i> Hauteur de la pièce :  {{ entity.width}} m</span>
									</li>
								</ul>
								<img style="margin-top:15px; margin-bottom:20px;" id="logo" src="{{ asset('image/icones/no_image.gif') }}" alt="Logo de la société SCGB"/> 
							</span>
							<span class="span9" style="padding: 15px;background-color: white;border-left: 1px solid blue;">	
								<div class="row-fluid" >
									<div class="span6">
										{{ form_row(form.work, {'form_type': 'horizontal'}) }}
										<p style="margin-top:20px; border-bottom: 1px solid grey;"> Description du travail</p>
										<div id="paint_01">
											<p style="color:#636363; text-align: justify;">Le mur est lisse et préparé. </br>Protection des surfaces, ponçage ou lessivage des murs. 
											Inclut une sous couche et si nécessaire deux couches de peinture.
											</p>
										</div>
										<div id="paint_02" style="display:none;">
											<p style="color:#636363; text-align: justify;">Support partiellement dégradé. Rebouchage et mastiquage des irrégularités. Passage d'un enduit de lissage. </br>
											Protection des surfaces, ponçage ou lessivage des murs. 
											Inclut une sous couche et si nécessaire deux couches de peinture.
											</p>
										</div>
										<script>
											$('#roomwork_work').change(function(){
												$('#paint_01').css( "display", "none");
												$('#paint_02').css( "display", "none");
												if($(this).val() == 1) {
													$('#paint_01').css( "display", "block");
												}
												else {													
													$('#paint_02').css( "display", "block");
												}
											})
										</script>
										
									</div>
									<div class="span6">
										{{ form_row(form.quantity, {'form_type': 'horizontal'}) }}										
										{{ form_row(form.comment, {'form_type': 'horizontal'}) }}
										<div class="alert alert-info" style="margin-top: 10px;">
											<button type="button" class="close" data-dismiss="alert">&times;</button>
											<p style="text-align: justify;">Commentez la nature de chaque post à effectuer nous aidera lors du retour que nous vous effecturons. Vous pourrez revenir sur chaque travail ultérieurement pour le détaillé.</p>
										</div>
										{{ form_rest(form) }} 
										{{ form_errors(form) }}
									</div>
								</div>								
								<input type="submit" class="btn btn-primary submit-padding" value="Valider ce travail"/>
							</span>							
						</span>
					</div>
			  </form>
			</div>
			
			{% include 'SCGBDevisBundle:RoomAdmin:list.html.twig' %}
			
		</div>
</div>

{% endblock %}