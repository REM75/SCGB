
<div class="form-padding" style="margin-bottom:20px;">
	{% if entity.roomWorks is empty %}
	<div class="alert alert-block">
		<button type="button" class="close" data-dismiss="alert">&times;</button>
		<strong> Pour nous permettre de chiffre votre devis ajouter des posts.</strong> 
		
	</div>
	{% else %}
	<div class="result spacer">
		<table class="table table-striped table-bordered table-hover" >
			<tr>
				<th style="text-align:center">{% trans %}Travail{% endtrans %}</th>
				<th style="text-align:center">{% trans %}Quantité (m²){% endtrans %}</th>
				<th style="text-align:center">{% trans %}Prix Unitaire (€){% endtrans %}</th>
				<th style="text-align:center">{% trans %}Description{% endtrans %}</th>
				<th style="text-align:center">{% trans %}Vos commentaires{% endtrans %}</th>
			</tr>
			{% for roomWork in entity.roomWorks %}
				<tr>
					<td style="text-align:center;width:80px;">{{ roomWork.work.reference}}</td>
					<td style="text-align:center;width:20px;">{{ roomWork.quantity}}</td>
					<td style="text-align:center;width:20px;">{{ roomWork.work.unitCost}}</td>
					<td style="text-align:center;width:80px;text-align:justify;">{{ roomWork.work.description}}</td>
					<td style="text-align:center;width:80px;">{{ roomWork.comment}}</td>
				</tr>
			{% endfor %}
		</table>
	</div>
	{% endif %}
	<a  href="{{ path('devis_list', {'id':devisId}) }}" class="btn pull-right" id="return_room">Retourner au récapitulatif des pièces</a>
</div>
